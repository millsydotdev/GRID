{
  "version": "1.0",
  "languages": [
    {
      "id": "example",
      "displayName": "Example Language",
      "extensions": [".ex", ".example"],
      "aliases": ["Example", "example"],
      "firstLine": "^#!/usr/bin/env example",
      "configuration": {
        "comments": {
          "lineComment": "//",
          "blockComment": ["/*", "*/"]
        },
        "brackets": [
          ["{", "}"],
          ["[", "]"],
          ["(", ")"]
        ],
        "autoClosingPairs": [
          { "open": "{", "close": "}" },
          { "open": "[", "close": "]" },
          { "open": "(", "close": ")" },
          { "open": "\"", "close": "\"", "notIn": ["string"] },
          { "open": "'", "close": "'", "notIn": ["string", "comment"] }
        ],
        "surroundingPairs": [
          ["{", "}"],
          ["[", "]"],
          ["(", ")"],
          ["\"", "\""],
          ["'", "'"]
        ],
        "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
        "indentationRules": {
          "increaseIndentPattern": "^.*\\{[^}\"']*$",
          "decreaseIndentPattern": "^\\s*\\}.*$"
        },
        "onEnterRules": [
          {
            "beforeText": "\\{[^}]*$",
            "action": {
              "indent": "indent"
            }
          },
          {
            "beforeText": "^\\s*//.*$",
            "action": {
              "indent": "none",
              "appendText": "// "
            }
          }
        ],
        "folding": {
          "markers": {
            "start": "^\\s*//\\s*#region",
            "end": "^\\s*//\\s*#endregion"
          }
        },
        "autoIndent": "full"
      },
      "grammar": {
        "scopeName": "source.example",
        "grammar": {
          "name": "Example",
          "scopeName": "source.example",
          "fileTypes": ["ex", "example"],
          "patterns": [
            { "include": "#comments" },
            { "include": "#keywords" },
            { "include": "#strings" },
            { "include": "#numbers" },
            { "include": "#operators" },
            { "include": "#functions" }
          ],
          "repository": {
            "comments": {
              "patterns": [
                {
                  "name": "comment.line.double-slash.example",
                  "match": "//.*$"
                },
                {
                  "name": "comment.block.example",
                  "begin": "/\\*",
                  "end": "\\*/"
                }
              ]
            },
            "keywords": {
              "patterns": [
                {
                  "name": "keyword.control.example",
                  "match": "\\b(if|else|while|for|return|break|continue|switch|case|default)\\b"
                },
                {
                  "name": "keyword.declaration.example",
                  "match": "\\b(var|let|const|function|class|interface|type)\\b"
                },
                {
                  "name": "storage.type.example",
                  "match": "\\b(int|string|bool|float|void)\\b"
                },
                {
                  "name": "constant.language.example",
                  "match": "\\b(true|false|null|undefined)\\b"
                }
              ]
            },
            "strings": {
              "patterns": [
                {
                  "name": "string.quoted.double.example",
                  "begin": "\"",
                  "end": "\"",
                  "patterns": [
                    {
                      "name": "constant.character.escape.example",
                      "match": "\\\\(x[0-9A-Fa-f]{2}|[0-7]{3}|[abfnrtv\\\\'\"]|u[0-9A-Fa-f]{4}|U[0-9A-Fa-f]{8})"
                    }
                  ]
                },
                {
                  "name": "string.quoted.single.example",
                  "begin": "'",
                  "end": "'",
                  "patterns": [
                    {
                      "name": "constant.character.escape.example",
                      "match": "\\\\(x[0-9A-Fa-f]{2}|[0-7]{3}|[abfnrtv\\\\'\"]|u[0-9A-Fa-f]{4}|U[0-9A-Fa-f]{8})"
                    }
                  ]
                },
                {
                  "name": "string.template.example",
                  "begin": "`",
                  "end": "`",
                  "patterns": [
                    {
                      "name": "meta.template.expression.example",
                      "begin": "\\$\\{",
                      "end": "\\}",
                      "patterns": [
                        { "include": "$self" }
                      ]
                    }
                  ]
                }
              ]
            },
            "numbers": {
              "patterns": [
                {
                  "name": "constant.numeric.hex.example",
                  "match": "\\b0[xX][0-9a-fA-F]+\\b"
                },
                {
                  "name": "constant.numeric.binary.example",
                  "match": "\\b0[bB][01]+\\b"
                },
                {
                  "name": "constant.numeric.octal.example",
                  "match": "\\b0[oO][0-7]+\\b"
                },
                {
                  "name": "constant.numeric.decimal.example",
                  "match": "\\b[0-9]+\\.?[0-9]*([eE][+-]?[0-9]+)?\\b"
                }
              ]
            },
            "operators": {
              "patterns": [
                {
                  "name": "keyword.operator.arithmetic.example",
                  "match": "\\+|\\-|\\*|\\/|\\%"
                },
                {
                  "name": "keyword.operator.comparison.example",
                  "match": "==|!=|<=|>=|<|>"
                },
                {
                  "name": "keyword.operator.logical.example",
                  "match": "&&|\\|\\||!"
                },
                {
                  "name": "keyword.operator.assignment.example",
                  "match": "=|\\+=|\\-=|\\*=|\\/=|\\%="
                }
              ]
            },
            "functions": {
              "patterns": [
                {
                  "name": "entity.name.function.example",
                  "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
                }
              ]
            }
          }
        }
      }
    }
  ]
}
